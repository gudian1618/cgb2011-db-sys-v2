<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.gudian1618.cgb2011dbsysv2.dao.SysUserDao">

    <!--提取共性动态sql语句-->
    <sql id="queryWhereId">
        from sys_users
        <where>
            <if test="username!=null and username!=''">
                username like concat("%",#{username},"%")
            </if>
        </where>
    </sql>

    <insert id="insertObject"
            parameterType="com.github.gudian1618.cgb2011dbsysv2.entity.SysUser"
            useGeneratedKeys="true"
            keyProperty="id">
            insert into sys_users
            (username,password,deptId,email,mobile,salt,valid,
             createdTime,modifiedTime,createdUser,modifiedUser)
            values
            (#{username},#{password},#{deptId},#{email},#{mobile},#{salt},#{valid},
             now(),now(),#{createdUser},#{modifiedUser})
    </insert>

    <update id="updateObject">
        update sys_users
        set username=#{username},
            mobile=#{mobile},
            email=#{email},
            deptId=#{deptId},
            modifiedTime=now(),
            modifiedUser=#{modifiedUser}
        where id=#{id}
    </update>

    <!--resultMap用于实现高级映射-->
    <resultMap type="com.github.gudian1618.cgb2011dbsysv2.common.vo.SysUserDeptVo" id="sysUserDeptVo">
        <id property="id" column="id"/>
        <!--基于用户id再次查询用户对应的部门信息
            association用于多表关联查询或嵌套查询 many2one 映射-->
        <association property="sysDept"
                     column="deptId"
                     select="com.github.gudian1618.cgb2011dbsysv2.dao.SysDeptDao.findById">
        </association>
    </resultMap>

    <select id="findPageObjects" resultMap="sysUserDeptVo">
        select *
        <include refid="queryWhereId"/>
        order by createdTime desc
        limit #{startIndex},#{pageSize}
    </select>

    <select id="getRowCount" resultType="long">
        select count(*)
        <include refid="queryWhereId"/>
    </select>

    <select id="findObjectById" resultMap="sysUserDeptVo">
        select *
        from sys_users
        where id=#{id}
    </select>
</mapper>
